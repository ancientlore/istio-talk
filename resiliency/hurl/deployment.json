{
	"containers": [
		{
			"name": "hurl",
			"image": "ancientlore/hurl:0.1",
			"port": 8080,
			"mincpu": "50m",
			"maxcpu": "100m",
			"minmem": "20Mi",
			"maxmem": "50Mi",
			"env": [
				{ "name": "HURL_DISCARD", "value": "true" }
			]
		}
	],
	"name": "hurl",
	"targetPort": 8080,
	"locations": [
		{
			"name": "awsqa"
		},
		{
			"name": "minikube"
		}
	],
    "clusters": 1,
    "replicas": 1,
	"user": "${KUBE_USER}",
	"token": "${KUBE_TOKEN}",
	"namespace": "${KUBE_NAMESPACE}",
	"loadBalanced": true,
	"autodeploy": true,
	"deploymentStrategy": "fast",
	"healthCheck": "none",
	"owner": "${KUBE_OWNER}",
	"istio": true
}
