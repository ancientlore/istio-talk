{
    "type": "destinationpolicies",
    "name": "webnull-circuit-breaker",
    "locations": [
        {
            "name": "awsqa"
        }
    ],
	"user": "${KUBE_USER}",
    "token": "${KUBE_TOKEN}",
    "namespace": "${KUBE_NAMESPACE}",
    "k8s": {
        "spec": {
            "destination": {
                "name": "webnull",
                "labels": {
                    "service": "webnull"
                }
            }, 
            "circuitBreaker": {
                "simpleCb": {
                    "maxConnections": 50,
                    "httpMaxPendingRequests": 1,
                    "httpMaxRequests": 100,
                    "sleepWindow": "15s",
                    "httpDetectionInterval": "1s",
                    "httpMaxEjectionPercent": 100,
                    "httpConsecutiveErrors": 1
                }
            }
        }
    }
}
